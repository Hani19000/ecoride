<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg" style="background-color: rgb(80, 178, 163);">
      <div class="container-fluid">
        <a class="navbar-brand" href="/covoiturage 2/public/index.html">EcoRide</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" 
                aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="index.html">Accueil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="covoiturage.html">Covoiturage</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="contact.html">Contact</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="login">Connexion</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <div class="profile-header d-flex align-items-center justify-content-center">
    <img src="https://www.w3schools.com/howto/img_avatar.png" alt="Avatar" class="profile-pic">
  </div>

  <div class="container mt-5">
    <!-- Informations de profil -->
    <div class="profile-info">
      <h2>Jean Dupont</h2>
      <p class="text-muted">Conducteur & Passager</p>
    </div>
    <div class="row mt-4">
      <div class="col-md-6">
        <div class="card p-3">
          <h5>Informations</h5>
          <p><strong>Email :</strong> jean.dupont@example.com</p>
          <p><strong>Ville :</strong> Paris, France</p>
          <p><strong>Membre depuis :</strong> Janvier 2023</p>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card p-3">
          <h5>Statistiques</h5>
          <p><strong>Trajets effectués :</strong> 24</p>
          <p><strong>Avis moyen :</strong> ⭐⭐⭐⭐☆ (4.5/5)</p>
          <p><strong>Véhicule :</strong> Peugeot 208 - Bleu</p>
        </div>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-12">
        <div class="card p-3">
          <h5>Derniers trajets</h5>
          <ul class="list-group">
            <li class="list-group-item">Paris → Lyon <span class="badge bg-success">Terminé</span></li>
            <li class="list-group-item">Lyon → Marseille <span class="badge bg-warning">En attente</span></li>
            <li class="list-group-item">Marseille → Nice <span class="badge bg-danger">Annulé</span></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Section Paramètres du compte avec système de crédits et rôle -->
    <div class="row mt-4">
      <div class="col-12">
        <div class="card p-3">
          <h5>Paramètres du compte</h5>
          <p><strong>Crédits :</strong> 20</p>
          <form id="profileForm">
            <!-- Sélection du rôle -->
            <div class="mb-3">
              <label class="form-label">Sélectionnez votre rôle :</label>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="roleChauffeur" name="role[]" value="chauffeur">
                <label class="form-check-label" for="roleChauffeur">Chauffeur</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="rolePassager" name="role[]" value="passager">
                <label class="form-check-label" for="rolePassager">Passager</label>
              </div>
            </div>

            <!-- Informations chauffeur à fournir si le rôle Chauffeur est sélectionné -->
            <div id="chauffeurDetails" class="border p-3 mb-3 d-none">
              <h6>Informations Véhicule(s)</h6>
              <div class="mb-3">
                <label for="plaque" class="form-label">Plaque d'immatriculation</label>
                <input type="text" class="form-control" id="plaque" name="plaque" placeholder="AB-123-CD">
              </div>
              <div class="mb-3">
                <label for="dateImmat" class="form-label">Date de première immatriculation</label>
                <input type="date" class="form-control" id="dateImmat" name="dateImmat">
              </div>
              <div class="row">
                <div class="col-md-4 mb-3">
                  <label for="marque" class="form-label">Marque</label>
                  <input type="text" class="form-control" id="marque" name="marque" placeholder="Peugeot">
                </div>
                <div class="col-md-4 mb-3">
                  <label for="modele" class="form-label">Modèle</label>
                  <input type="text" class="form-control" id="modele" name="modele" placeholder="208">
                </div>
                <div class="col-md-4 mb-3">
                  <label for="couleur" class="form-label">Couleur</label>
                  <input type="text" class="form-control" id="couleur" name="couleur" placeholder="Bleu">
                </div>
              </div>
              <div class="mb-3">
                <label for="places" class="form-label">Nombre de places disponibles</label>
                <input type="number" class="form-control" id="places" name="places" min="1" placeholder="4">
              </div>
              <h6>Préférences</h6>
              <div class="mb-3">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="prefFumeur" name="pref[]" value="fumeur">
                  <label class="form-check-label" for="prefFumeur">Fumeur</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="prefAnimal" name="pref[]" value="animal">
                  <label class="form-check-label" for="prefAnimal">Animal</label>
                </div>
              </div>
            </div>

            <button type="submit" class="btn btn-primary">Enregistrer</button>
          </form>
        </div>
      </div>
    </div>

  </div>
  <style>
    body {
      background-color: #00ffbf;
    }
    .profile-header {
      background: linear-gradient(135deg, #007bff, #6610f2);
      height: 200px;
      position: relative;
      border-radius: 0 0 20px 20px;
    }
    .profile-pic {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      border: 5px solid white;
      position: absolute;
      bottom: -75px;
      left: 50%;
      transform: translateX(-50%);
    }
    .profile-info {
      margin-top: 80px;
      text-align: center;
    }
    .card {
      border-radius: 15px;
      background-color: rgb(80, 178, 163);
    }

.list-group-item {
    background-color: #00f5ac73; 
    color: #000; 
    border-color: #ffffff80;
}

.list-group-item .badge.bg-success {
    background-color: #20d149 !important; 
}

.list-group-item .badge.bg-warning {
    background-color: #ffc107 !important; 
}

.list-group-item .badge.bg-danger {
    background-color: #dc3545 !important; 
}

  </style>
  <script>
  document.addEventListener('DOMContentLoaded', function(){
    const roleChauffeur = document.getElementById('roleChauffeur');
    const chauffeurDetails = document.getElementById('chauffeurDetails');
    
    roleChauffeur.addEventListener('change', function(){
      if (roleChauffeur.checked) {
        chauffeurDetails.classList.remove('d-none');
      } else {
        chauffeurDetails.classList.add('d-none');
      }
    });
  });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
